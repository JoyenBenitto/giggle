{% extends "base.jinja" %}

{% block content %}
<div class="container">
    <h1 class="blog_headings">Blog Posts</h1>
    
    <div class="blog-list">
        {% for post in blog_posts %}
        <article class="blog-preview">
            <h2><a href="blog_{{ post.file | replace('.md', '') }}.html">{{ post.title }}</a></h2>
            <div class="post-meta">
                <span class="date">{{ post.date }}</span>
            </div>
            <p class="description">{{ post.description }}</p>
            <a href="blog_{{ post.file | replace('.md', '') }}.html" class="read-more">Read More â†’</a>
        </article>
        {% endfor %}
    </div>
</div>

<style>
.blog-list {
    margin-top: 2rem;
}

.blog-preview {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background-color: var(--color-background-secondary);
    border-radius: 8px;
    transition: transform 0.2s ease;
}

.blog-preview:hover {
    transform: translateY(-2px);
}

.post-meta {
    margin: 0.5rem 0;
    color: var(--color-text-secondary);
    font-size: 0.9rem;
}

.description {
    margin: 1rem 0;
}

.read-more {
    display: inline-block;
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
}

.read-more:hover {
    color: var(--color-accent);
}
</style>
{% endblock %}
