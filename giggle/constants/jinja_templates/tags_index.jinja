{% extends "base.jinja" %}

{% block title %}Tags - {{ recipe.site.title }}{% endblock %}

{% block content %}
<div class="tags-container">
    <h1>Tags</h1>
    <p>Browse content by tags:</p>
    
    <div class="tags-grid">
        {% for tag in recipe.tags %}
        <a href="./tags/{{ tag }}.html" class="tag-link">
            <div class="tag-card">
                <h3>{{ tag }}</h3>
                <span class="tag-count">{{ recipe.tag_counts[tag] }} posts</span>
            </div>
        </a>
        {% endfor %}
    </div>
</div>

<style>
    .tags-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .tags-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .tag-link {
        text-decoration: none;
        color: inherit;
    }

    .tag-card {
        background-color: {{ recipe.style.colors.background_secondary }};
        border-radius: 8px;
        padding: 1.5rem;
        transition: transform 0.2s ease;
    }

    .tag-card:hover {
        transform: translateY(-3px);
    }

    .tag-card h3 {
        margin: 0;
        color: {{ recipe.style.colors.text }};
    }

    .tag-count {
        display: inline-block;
        margin-top: 0.5rem;
        font-size: 0.9rem;
        color: {{ recipe.style.colors.text_secondary }};
    }
</style>
{% endblock %}
