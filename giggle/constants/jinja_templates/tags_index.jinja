{% extends "base.jinja" %}

{% block title %}Tags - {{ recipe.site.title }}{% endblock %}

{% block content %}
<div class="tags-container">
    <h1>Tags</h1>
    <p>Browse content by tags:</p>
    
    <div class="tags-grid">
        {% for tag in recipe.tags %}
        <a href="./tags/{{ tag }}.html" class="tag-link">
            <div class="tag-card">
                <h3>{{ tag }}</h3>
                <span class="tag-count">{{ recipe.tag_counts[tag] }} posts</span>
            </div>
        </a>
        {% endfor %}
    </div>
</div>

<style>
    .tags-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .tags-container h1 {
        margin: 0;
        margin-bottom: 1rem;
        color: var(--header-color);
        font-size: 2.5rem;
        font-weight: 700;
        letter-spacing: -0.025em;
    }

    .tags-container p {
        color: var(--text-muted);
        margin: 0;
        font-size: 1.1rem;
        font-weight: 400;
    }

    .tags-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .tag-link {
        text-decoration: none;
        color: inherit;
    }

    .tag-card {
        background: var(--card-bg);
        border-radius: 1rem;
        padding: 1.75rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        transition: all 0.3s ease;
        border: 1px solid var(--tag-bg);
    }

    .tag-card:hover {
        transform: translateY(-4px);
        background: var(--card-hover);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    .tag-card h3 {
        margin: 0;
        margin-bottom: 0.5rem;
        color: var(--header-color);
        font-size: 1.25rem;
        font-weight: 600;
    }

    .tag-count {
        color: var(--text-muted);
        font-size: 0.875rem;
    }

    @media (max-width: 768px) {
        .tags-container {
            padding: 1rem;
        }

        .tags-container h1 {
            font-size: 2rem;
        }

        .tags-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .tag-card {
            padding: 1.25rem;
        }
    }
</style>
{% endblock %}
