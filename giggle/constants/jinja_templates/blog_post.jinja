{% extends "base.jinja" %}

{% block title %}{{ title }} - {{ recipe.site.title }}{% endblock %}

{% block content %}
<article class="blog-post">
    <header class="post-header">
        <h1>{{ title }}</h1>
        {% if date %}
        <div class="post-meta">
            <time datetime="{{ date }}">{{ date }}</time>
            {% if tags %}
            <div class="post-tags">
                {% for tag in tags %}
                <a href="../tags/{{ tag }}.html" class="tag">{{ tag }}</a>
                {% endfor %}
            </div>
            {% endif %}
        </div>
        {% endif %}
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>

    <footer class="post-footer">
        <a href="../blogs.html" class="back-link">‚Üê Back to Blog</a>
    </footer>
</article>

<style>
    .blog-post {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .post-header {
        margin-bottom: 2rem;
        text-align: center;
    }

    .post-header h1 {
        margin: 0;
        margin-bottom: 1rem;
        color: {{ style.colors.text }};
    }

    .post-meta {
        color: {{ style.colors.text_secondary }};
        font-size: 0.9rem;
    }

    .post-tags {
        margin-top: 1rem;
    }

    .tag {
        display: inline-block;
        padding: 0.2rem 0.8rem;
        margin: 0.2rem;
        background-color: {{ style.colors.background_secondary }};
        color: {{ style.colors.text_secondary }};
        text-decoration: none;
        border-radius: 20px;
        font-size: 0.8rem;
        transition: all 0.2s ease;
    }

    .tag:hover {
        background-color: {{ style.colors.primary }};
        color: {{ style.colors.text }};
    }

    .post-content {
        line-height: 1.6;
        color: {{ style.colors.text }};
    }

    .post-content h2,
    .post-content h3,
    .post-content h4 {
        margin-top: 2rem;
        color: {{ style.colors.text }};
    }

    .post-content p {
        margin: 1rem 0;
    }

    .post-content img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 1.5rem 0;
    }

    .post-content code {
        background-color: {{ style.colors.background_secondary }};
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-family: monospace;
    }

    .post-content pre {
        background-color: {{ style.colors.background_secondary }};
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
    }

    .post-content pre code {
        background-color: transparent;
        padding: 0;
    }

    .post-content blockquote {
        margin: 1.5rem 0;
        padding-left: 1rem;
        border-left: 4px solid {{ style.colors.primary }};
        color: {{ style.colors.text_secondary }};
    }

    .post-footer {
        margin-top: 3rem;
        text-align: center;
    }

    .back-link {
        color: {{ style.colors.primary }};
        text-decoration: none;
        font-weight: 500;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}
