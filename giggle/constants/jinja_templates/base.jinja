{#base template for the page#}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="./style.css">
    
    <!-- Site Metadata -->
    <title>{{ recipe.site.title | default('My Website') }}</title>
    {% if recipe.site.description %}
    <meta name="description" content="{{ recipe.site.description }}">
    {% endif %}
    {% if recipe.site.author %}
    <meta name="author" content="{{ recipe.site.author }}">
    {% endif %}
    
    <!-- Favicon -->
    {% if recipe.favicon %}
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%2210 0 100 100%22><text y=%22.90em%22 font-size=%2290%22>{{ recipe.favicon }}</text></svg>">
    {% endif %}
</head>

<body>
    <main class="container">
        {% include "navbar.jinja" %}
        {{ body }}
        {% include "footer.jinja" %}
    </main>
    <script src="./navbar.js" defer></script>
</body>
</html>
