{#base template for the page#}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="color-scheme" content="dark">
    <meta name="theme-color" content="#0f172a">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="favicon.svg">
    
    <!-- Google Fonts -->
    {{ recipe.fonts | safe }}
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="./style.css">
    
    <!-- Site Metadata -->
    <title>{{ recipe.site.title | default('My Website') }}</title>
    {% if recipe.site.description %}
    <meta name="description" content="{{ recipe.site.description }}">
    {% endif %}
    {% if recipe.site.author %}
    <meta name="author" content="{{ recipe.site.author }}">
    {% endif %}
</head>

<body>
    <main class="container">
        {% include "navbar.jinja" %}
        {{ body }}
        {% include "footer.jinja" %}
    </main>
    <script src="./nav.js" defer></script>
</body>
</html>
